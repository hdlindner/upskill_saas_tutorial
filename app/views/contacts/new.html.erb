<div class="container">
  
  <div class="row">
    <h3 class="text-center">Contact Us</h3>
    
    <!--  The HTML way to make a form... there would be an action in the form tag
    <form>
      <label>Name</label>
      <input type="text">
      <br>
      <label>Email</label>
      <input type = "text">
      <br>
      <label>Comments</label>
      <input type="text">
      <br>
      <input type="submit">
    </form>
    -->
    
    <div class="col-md-4 col-md-offset-4">
      <%= flash[:notice] %>
      <div class="well">
        <%= form_for @contact do |f| %>
        
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>    
          
          <div class="form-group">
            <%= f.label :comments %>
            <%= f.text_area :comments, class: 'form-control' %>
          </div>  
          
          <div class="form-group">
            <%= f.submit 'Submit', class: 'btn btn-default' %>
          </div>  
          
        <% end %>
      </div>
    </div>
  </div>
</div>